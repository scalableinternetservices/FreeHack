<!-- Simple core features load test -->

<?xml version="1.0"?>
<!DOCTYPE tsung SYSTEM "/home/ec2-user/opt/tsung-1.5.0/share/tsung/tsung-1.0.dtd">
<tsung loglevel="notice" version="1.0">

  <!-- Client side setup -->
  <clients>
    <client host="localhost" use_controller_vm="true" maxusers='15000'/>
  </clients>

  <!-- Server side setup -->
  <servers>
    <server host="ec2-35-164-34-222.us-west-2.compute.amazonaws.com" port="80" type="tcp"></server>
  </servers>


  <load>
    <arrivalphase phase="1" duration="30" unit="second">
      <users arrivalrate="1" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="2" duration="30" unit="second">
      <users arrivalrate="2" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="3" duration="30" unit="second">
      <users arrivalrate="4" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="4" duration="30" unit="second">
      <users arrivalrate="8" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="5" duration="30" unit="second">
      <users arrivalrate="16" unit="second"></users>
    </arrivalphase>
  </load>

  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="global_ack_timeout" value="2000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>

  <sessions>
    <session name="http-example" probability="100" type="ts_http">
      <setdynvars sourcetype="random_number" start="1000" end="9999999">
        <var name="rand"/>
      </setdynvars>
      <request>
        <http url='/' version='1.1' method='GET'></http>
      </request>
      
      <thinktime value="1" random="true"></thinktime>
      
      <request subst="true">
        <dyn_variable name="userID" jsonpath="response.data.id" />
        <http url='/auth' version='1.1' method='POST' contents="email=user%%_rand%%%40gmail.com&amp;password=password&amp;password_confirmation=password"></http>
      </request>
      
      <thinktime value="1" random="true"></thinktime>
      
      <request>
        <http url='/api/v1/feed' version='1.1' method='GET'></http>
      </request>
      
      <thinktime value="1" random="true"></thinktime>
      
      <request>
        <http url='/api/v1/posts' version='1.1' method='POST' contents="content=:astonished::astonished:"></http>
      </request>
      
      <request subst="true">
        <dyn_variable name="firstPostID" jsonpath="response.post.id" />
        <http url='/api/v1/posts' version='1.1' method='POST' contents="content=:nerd:%20:nerd:%20:nerd:"></http>
      </request>
      
      <thinktime value="1" random="true"></thinktime>
      
      <request>
        <http url='/api/v1/users/%%_userID%%' version='1.1' method='GET'></http>
      </request>
      
      <request>
        <http url='/api/v1/users/%%_userID%%/posts' version='1.1' method='GET'></http>
      </request>
      
      <thinktime value="1" random="true"></thinktime>
      
      <request>
        <http url='/api/v1/users/%%_userID%%/follow' version='1.1' method='POST' contents="type=follow"></http>
      </request>
      
      <thinktime value="1" random="true"></thinktime>
      
      <request>
        <http url='/api/v1/feed' version='1.1' method='GET'></http>
      </request>
      
      <request>
        <http url='/api/v1/posts/%%_firstPostID%%/react' version='1.1' method='POST' contents="desired=react&amp;reaction=wow"></http>
      </request>
      
      <request>
        <http url='/auth' version='1.1' method='DELETE'></http>
      </request>
      
    </session>
  </sessions>
</tsung>